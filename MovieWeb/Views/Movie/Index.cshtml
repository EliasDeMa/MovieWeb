@model IEnumerable<MovieIndexViewModel>

<h1>Movies</h1>

@if (Model.Count() > 0)
{
    <table cellpadding="5">
        <tr>
            <th>Title</th>
        </tr>

        @foreach(var item in Model)
        {
        <tr>
            <td>
                @item.Title
                <a asp-controller="Movie"
                   asp-action="Detail" 
                   asp-route-id="@item.Id">Detail</a>
            </td>
        </tr>
        }
    </table>
} else {
    <p>
        <strong>There are no films.</strong>
    </p>
} 

<a asp-action="Create" 
   asp-controller="Movie"
   class="btn btn-primary">
    Create Movie
</a>

