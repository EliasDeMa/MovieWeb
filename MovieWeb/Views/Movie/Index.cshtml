@model IEnumerable<MovieIndexViewModel>

<h1>Movies</h1>

@if (Model != null && Model.Count() > 0)
{
    <table cellpadding="5">
        <tr>
            <th>Title</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>

        @foreach(var item in Model)
        {
    <tr>
        <td>
            @item.Title
        </td>
        <td>
            <a asp-controller="Movie"
               asp-action="Detail"
               asp-route-id="@item.Id">Detail</a>
        </td>
        <td>
            <a asp-controller="Movie"
               asp-action="Edit"
               asp-route-id="@item.Id">Edit</a>
        </td>
        <td>
            <a asp-controller="Movie"
               asp-action="Delete"
               asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
        }
    </table>
} else {
    <p>
        <strong>There are no films.</strong>
    </p>
} 

<a asp-action="Create" 
   asp-controller="Movie"
   class="btn btn-primary">
    Create Movie
</a>

